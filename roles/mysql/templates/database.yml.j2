default: &default
  adapter: mysql2
  encoding: unicode
  host: localhost
  port: 3306

development:
  <<: *default
  database: {{dbname}}_development

test:
  <<: *default
  database: {{dbname}}_test

production:
  <<: *default
  database: {{dbname}}_production
  username: {{dbuser}}
  password: {{dbpassword}}

